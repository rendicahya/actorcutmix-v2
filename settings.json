{
  "active": {
    "dataset": "ucf101",
    "random_seed": 0,
    "detector": "yolov8-coco",
    "max_workers": 8
  },
  "datasets": {
    "ucf101": {
      "path": "data/ucf101/videos",
      "ext": ".avi",
      "class_index": "data/ucf101/annotations/classInd.txt",
      "n_videos": 13320,
      "n_classes": 101
    },
    "hmdb51": {
      "path": "data/hmdb51/videos",
      "ext": ".avi",
      "split": 1,
      "n_videos": 6766,
      "n_classes": 51,
      "frames": "data/hmdb51/frames"
    },
    "kinetics100": {
      "path": "data/kinetics100/videos",
      "ext": ".mp4",
      "split": 1,
      "n_videos": 9999,
      "n_classes": 100
    }
  },
  "detect": {
    "generate_videos": true,
    "yolov8-coco": {
      "checkpoint": "checkpoints/yolov8x.pt",
      "confidence": 0.25,
      "human_class": [0]
    },
    "yolov8-iov7": {
      "checkpoint": "checkpoints/yolov8x-iov7.pt",
      "confidence": 0.25
    },
    "yolov10-coco": {
      "checkpoint": "checkpoints/yolov10x.pt",
      "confidence": 0.25,
      "human_class": [0]
    }
  },
  "iou": {
    "resize": {
      "ucf101": 0.75,
      "hmdb51": 1.0,
      "kinetics100": 0.6
    }
  },
  "cutmix": {
    "multiplication": 10,
    "scene": {
      "replace": "black",
      "selection": { "method": "random", "tolerance": 0.1 },
      "transform": {
        "enabled": false,
        "op": "hflip"
      }
    },
    "soft_edge": { "enabled": false, "kernel_size": 35 },
    "temporal_morphology": {
      "enabled": true,
      "op": "opening",
      "length": 9
    }
  }
}
